@model gitHubTest.ViewModel.LoginViewModel;
@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>로그인 페이지</title>
</head>
<body>
    <partial name="/Views/DevelopmentRabbit/Contents.cshtml" />
    <h2>로그인 페이지</h2>
    <form class="form-group" method="post" asp-controller="Account" asp-action="Login">
        <div class="form-group">
            <label>사용자 ID</label>
            <input type="text" asp-for="UserId" class="form-control" placeholder="사용자 ID를 입력해주세요" />
            <span class="text-danger" asp-validation-for="UserId"></span>
        </div>
        <div class="form-group">
            <label>사용자 Password</label>
            <input type="password" asp-for="UserPassword" class="form-control" placeholder="사용자 Password를 입력해주세요" />
            <span class="text-danger" asp-validation-for="UserPassword"></span>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="from-group">
            @if (Context.Session.GetInt32("USER_LOGIN_KEY") == null)
            {
                <button type="submit" class="btn btn-primary">로그인</button>
                <a class="btn btn-warning" href="javascript:void(0);">취소</a>
            }
            else
            {
                <li><a asp-area="" asp-controller="Account" asp-action="Logout">로그아웃</a></li>
            }
        </div>
    </form>
</body>
</html>
